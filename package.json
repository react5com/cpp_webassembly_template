{
  "name": "cpp_webassembly_template",
  "private": true,
  "type": "module",
  "workspaces": [
    "native",
    "packages/*"
  ],
  "scripts": {
    "build:native": "npm --workspace @cpp_webassembly_template/nlplib run build",
    "dev:sample": "npm --workspace @cpp_webassembly_template/sample run dev",
    "dev": "npm run build:native && run-p dev:sample",
    "build:sample": "npm --workspace @cpp_webassembly_template/sample run build",
    "test": "npm --workspace @cpp_webassembly_template/tests run test",
    "test:dev": "npm --workspace @cpp_webassembly_template/tests run dev",
    "build": "run-s build:native build:sample",
    "debug": "npm --workspace @cpp_webassembly_template/nlplib run debug",
    "lint": "run-s lint:sample lint:tests lint:native",
    "format": "run-s format:sample format:tests format:native",
    "lint:sample": "npm --workspace @cpp_webassembly_template/sample run lint",
    "lint:tests": "npm --workspace @cpp_webassembly_template/tests run lint",
    "lint:native": "npm --workspace @cpp_webassembly_template/nlplib run lint",
    "format:sample": "npm --workspace @cpp_webassembly_template/sample run format",
    "format:tests": "npm --workspace @cpp_webassembly_template/tests run format",
    "format:native": "npm --workspace @cpp_webassembly_template/nlplib run format",
    "cmake:native": "npm --workspace @cpp_webassembly_template/nlplib run cmake:native"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "buffer": "^6.0.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
